# =============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment Type
NODE_ENV=development
VITE_APP_ENV=development

# Application Configuration
VITE_APP_NAME=Payroll UI (Dev)
VITE_APP_VERSION=1.0.0-dev

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Tenant Configuration
VITE_TENANT_ID=dev
VITE_TENANT_NAME=Development Company
VITE_TENANT_DOMAIN=dev
VITE_TENANT_API_URL=http://localhost:3000/api/tenant/dev

# Authentication Configuration
VITE_AUTH_TYPE=jwt
VITE_JWT_SECRET=dev-jwt-secret-key
VITE_SESSION_TIMEOUT=480
VITE_REMEMBER_ME_DURATION=30

# Feature Flags
VITE_FEATURE_3D_SCENE=true
VITE_FEATURE_ANIMATIONS=true
VITE_FEATURE_ANALYTICS=false
VITE_FEATURE_DEBUG_MODE=true

# Redux DevTools Configuration
VITE_REDUX_DEVTOOLS_ENABLED=true
VITE_REDUX_DEVTOOLS_NAME=Payroll UI Dev

# Logging Configuration
VITE_LOG_LEVEL=debug
VITE_CONSOLE_LOGGING=true
VITE_REMOTE_LOGGING=false

# Analytics Configuration
VITE_GA_ID=
VITE_MIXPANEL_TOKEN=

# Performance Configuration
VITE_ENABLE_SW=false
VITE_ENABLE_PWA=false

# Security Configuration
VITE_CSP_ENABLED=false
VITE_HTTPS_ONLY=false

# Deployment Configuration
VITE_BUILD_OUTPUT_DIR=dist
VITE_SOURCE_MAPS=true
VITE_ENABLE_COMPRESSION=false 