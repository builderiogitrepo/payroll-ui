# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment Type
NODE_ENV=production
VITE_APP_ENV=production

# Application Configuration
VITE_APP_NAME=Payroll UI
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_BASE_URL=https://api.payroll.com/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Tenant Configuration
VITE_TENANT_ID=production
VITE_TENANT_NAME=Production Company
VITE_TENANT_DOMAIN=production
VITE_TENANT_API_URL=https://api.payroll.com/api/tenant/production

# Authentication Configuration
VITE_AUTH_TYPE=jwt
VITE_JWT_SECRET=production-jwt-secret-key
VITE_SESSION_TIMEOUT=480
VITE_REMEMBER_ME_DURATION=30

# Feature Flags
VITE_FEATURE_3D_SCENE=true
VITE_FEATURE_ANIMATIONS=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_DEBUG_MODE=false

# Redux DevTools Configuration
VITE_REDUX_DEVTOOLS_ENABLED=false
VITE_REDUX_DEVTOOLS_NAME=Payroll UI Prod

# Logging Configuration
VITE_LOG_LEVEL=warn
VITE_CONSOLE_LOGGING=false
VITE_REMOTE_LOGGING=true

# Analytics Configuration
VITE_GA_ID=G-PRODUCTION-123456
VITE_MIXPANEL_TOKEN=production-mixpanel-token

# Performance Configuration
VITE_ENABLE_SW=true
VITE_ENABLE_PWA=true

# Security Configuration
VITE_CSP_ENABLED=true
VITE_HTTPS_ONLY=true

# Deployment Configuration
VITE_BUILD_OUTPUT_DIR=dist
VITE_SOURCE_MAPS=false
VITE_ENABLE_COMPRESSION=true 